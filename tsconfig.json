{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": false,
    "verbatimModuleSyntax": false,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
